# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh, bash}]
tab_width = 2
indent_size = 2

[*.{md, markdown, txt}]
tab_width = 2
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
